#!/bin/sh
if printf '%s\n' "$1" | grep -qxE '\-(h|-help)' || ! test $# -gt 0; then
	printf '%s\n' \
		"fysl - F*ck your shortened link" "" \
		"fysl usage:" "  fysl [link1[ ...[ linkn]]" ""
	exit 0
fi
while test $# -gt 0; do
	unset url
	if printf '%s\n' "$1" | grep -qE '^https?://'; then
		printf '%s: crawling' "$1"
		url=$(
			curl    https://redirectdetective.com/ld.px \
				--disable --compressed -s \
				--data-urlencode "w=$1" \
				--data-urlencode 'f=false' \
				-H 'Origin: https://redirectdetective.com' \
				-H 'Referer: https://redirectdetective.com' |
				xmllint --html --xmlout --xpath 'string((//a)[last()]/@href)' -
		)
		printf '\33[2K\r%s: found\n  %s\n' "$1" "$url"
	else
		printf '%s: not an http(s) link\n' "$1"
	fi
	shift
done
