#!/bin/sh
has()
{
	command -pv "$@" 2> /dev/null >&2
}

run_in_terminal()
{
	if has xfce4-terminal; then
		exec xfce4-terminal --disable-server \
			-T 'Performing upgrades' \
			--dynamic-title-mode=none \
			--hide-menubar --hide-toolbar \
			--show-borders --show-scrollbar \
			-I system-upgrade \
			--maximize -e "$*"
	fi
}

if ! tty -s; then
	run_in_terminal "$0"
fi

if [ -n "$DISPLAY" ]; then
	sudo()
	{
		pkexec "$@"
	}
fi

if test -f /etc/arch-release; then
	if has paru; then
		paru -Syu
		SKIP_PACMAN=1
	elif has aur; then
		env -u SSH_AUTH_SOCK AUR_SYNC_USE_NINJA=1 \
			aur sync \
			--keep-going=0 \
			--no-view \
			--upgrades \
			--rebase \
			--chroot \
			--no-confirm \
			--pkgver
	fi
	( (SKIP_PACMAN)) || sudo pacman -Syu
fi

stty -echo echonl
read -p 'Press RETURN to continue...' _ > /dev/null
