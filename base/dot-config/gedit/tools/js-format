#!/bin/sh
# [Gedit Tool]
# Name=Format
# Input=selection-document
# Output=replace-selection
# Applicability=titled
# Save-files=nothing
# Languages=js
# Shortcut=F3

check()
{
	for n in "$@"; do
		if ! /bin/which --skip-tilde --skip-dot --skip-alias --skip-functions $n > /dev/null 2>&1; then
			echo "$n is not installed" >&2
			exit 1
		fi
	done
}
check js-beautify
js-beautify -ijkx -w 80
