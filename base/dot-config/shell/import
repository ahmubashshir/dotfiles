#!/bin/sh
. ~/.config/shell/functions
. ~/.config/shell/aliases
if [ "${TERM#xterm*-}" = "kitty" ] || [ "${TERM%[-+]*}" = "kitty" ]; then
	kitty +kitten icat --align=left ~/.config/shell/motd.png
else
	cat >&2 << EOF
          _————             +--------------------------------------+
         //¯¯\\\\\\\\           |    _  _     _    _ _                 |
        // _  _\\\\           |   | \| |_ _(_)__| (_)__ _            |
        \|(0)(0)\           |   | .\` \ V / / _\` | / _\` |_          |
        d  n ¨  b           |   |_|\_|\_/|_\__,_|_\__,_( )         |
         \_U_^  /           |                          |/          |
         /   \_/|_____      |       Nvidia,                        |
      ___\   |__/\    \_    |          Fuck you!                   |
     /   |   / |:|      \   |   ___        _                   _   |
    /    /  /\ |:|     | \  |  | __|  _ __| |__  _  _ ___ _  _| |  |
   |    /\__/ \|:\     |  \ |  | _| || / _| / / | || / _ \ || |_|  |
    \  /\   / ||: \    \  | |  |_| \_,_\__|_\_\  \_, \___/\_,_(_)  |
     \/  \_/  ||: |     |  \|                    |__/              |
     /     /  //; \     |  |+--------------------------------------+
     \    /  /|;   \    |  \'
EOF
fi
