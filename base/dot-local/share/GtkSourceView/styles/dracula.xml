<style-scheme id="dracula" _name="Dracula" kind="dark" version="1.0">
  <_description>A dark theme for Gedit</_description>
  <!-- Named Colors -->
  <color name="background" value="#282A36"/>
  <color name="bone-white" value="#F8F8F0"/>
  <color name="comment" value="#6272A4"/>
  <color name="current-line" value="#44475A"/>
  <color name="cyan" value="#8BE9FD"/>
  <color name="foreground" value="#F8F8F2"/>
  <color name="green" value="#50FA7B"/>
  <color name="orange" value="#FFB86C"/>
  <color name="pink" value="#FF79C6"/>
  <color name="purple" value="#BD93F9"/>
  <color name="red" value="#FF5555"/>
  <color name="selection" value="#BD93F9"/>
  <color name="weird-gray" value="#909194"/>
  <color name="white" value="#FFFFFF"/>
  <color name="yellow" value="#F1FA8C"/>
  <!-- Global Styles -->
  <style name="background-pattern" background="#2F313E"/>
  <style name="bracket-match" background="background" foreground="bone-white" underline="single"/>
  <style name="current-line" background="current-line" foreground="current-line"/>
  <style name="cursor" background="white" foreground="white"/>
  <style name="line-numbers" background="background" foreground="weird-gray"/>
  <style name="search-match" background="yellow" foreground="selection"/>
  <style name="selection" background="selection"/>
  <style name="text" background="background" foreground="bone-white"/>
  <!-- Defaults -->
  <style name="def:boolean" foreground="selection"/>
  <style name="def:builtin" foreground="cyan"/>
  <style name="def:comment" foreground="comment"/>
  <style name="def:deletion" foreground="red" strikethrough="true"/>
  <style name="def:emphasis" italic="true"/>
  <style name="def:function" foreground="green"/>
  <style name="def:heading" foreground="green" bold="true"/>
  <style name="def:identifier" foreground="pink"/>
  <style name="def:inline-code" foreground="cyan"/>
  <style name="def:insertion" underline="single"/>
  <style name="def:keyword" foreground="pink"/>
  <style name="def:constant" foreground="purple"/>
  <style name="def:link-destination" foreground="pink" italic="true" underline="single"/>
  <style name="def:link-symbol" foreground="orange" bold="true"/>
  <style name="def:link-text" foreground="orange"/>
  <style name="def:list-marker" foreground="selection" bold="true"/>
  <style name="def:number" foreground="selection"/>
  <style name="def:preformatted-section" foreground="cyan"/>
  <style name="def:preprocessor" foreground="green"/>
  <style name="def:special-char" foreground="pink"/>
  <style name="def:specials" foreground="foreground"/>
  <style name="def:statement" foreground="pink"/>
  <style name="def:string" foreground="yellow"/>
  <style name="def:strong-emphasis" foreground="selection" bold="true"/>
  <style name="def:thematic-break" foreground="green" bold="true"/>
  <style name="def:type" foreground="green"/>
  <!-- Diff -->
  <style name="diff:added-line" background="#468410" foreground="foreground" bold="true"/>
  <style name="diff:changed-line" background="#243A5F" foreground="foreground"/>
  <style name="diff:removed-line" foreground="#8B080B"/>
  <!-- Python 2 -->
  <style name="python:builtin-constant" foreground="selection"/>
  <style name="python:class-name" foreground="white"/>
  <style name="python:decorator" foreground="green"/>
  <style name="python:function-name" foreground="green"/>
  <style name="python:module-handler" foreground="pink"/>
  <style name="python:special-variable" foreground="cyan"/>
  <!-- arduino -->
  <style name="arduino:keyword" foreground="orange" bold="true"/>
</style-scheme>
