#!/bin/dash
if timeout 0.45 ping -c 1 1.0.0.1 2> /dev/null >&2; then
	icon='network-wired-activated'
	msg='Connected'
elif ip route | awk '/^default/ && ! _[$3]++ {print $3}' | xargs -r -P 5 -n 1 timeout 0.45 ping -c1 2> /dev/null >&2; then
	icon='network-wired-no-route'
	msg='Connected(No Internet)'
else
	icon='network-wired-offline'
	msg=Disconnected
fi
if ! systemctl is-active -q nginx.service; then
	icon='network-wired-acquiring'
	msg="$msg(Server Down)"
fi
printf '<icon>%s</icon><tool>%s</tool>' "$icon" "$msg"
