#!/bin/bash
if fping -qt 25 1.0.0.1; then
	icon=''
	msg=Online
elif [[ $(nmcli general | awk 'END{print $1}') == connected ]]; then
	icon=''
	msg=Local
else
	icon=''
	msg=Disconnected
fi
if ! curl -s localhost -o /dev/null; then
	icon=''
	msg="$msg"$'\nServer Down'
fi
printf '<txt>%s</txt><tool>%s</tool>' "$icon" "$msg"
