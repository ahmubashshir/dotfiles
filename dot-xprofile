#!/bin/sh
export GTK_IM_MODULE=ibus
export QT_IM_MODULE=ibus
export XMODIFIERS=@im=ibus
ibus-daemon -drx --panel /usr/lib/ibus/ibus-ui-gtk3
while read line; do
    export "$line"
done <<<$(bash -ic 'env' 2>/dev/null)
{
	pactl set-card-profile		alsa_card.pci-0000_00_1b.0 output:analog-stereo+input:analog-stereo
	pactl set-card-profile		alsa_card.usb-_Webcam_C170-02 input:multichannel-input
	pactl set-default-sink		alsa_output.pci-0000_00_1b.0.analog-stereo
	pactl set-default-source	alsa_input.usb-_Webcam_C170-02.multichannel-input
	pactl set-sink-port		alsa_output.pci-0000_00_1b.0.analog-stereo analog-output-headphones
	pactl set-source-port		alsa_input.usb-_Webcam_C170-02.multichannel-input multichannel-input
} &>/dev/null
