[alias]
	lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative
	tree = !tig
	stat = !tig status
	fsclr = !git reflog expire --expire=now --all&&git gc --prune=now
	chbr = checkout -b
	tlog = !tig log
	clear = clean -fd
	dt = diff
	mt = mergetool
	unstage = reset HEAD
	last = log -1 HEAD
	visual = !gitk
	st = status
	uncommit = reset --soft HEAD^
	progress = diff --stat
	amend = commit --amend
	pg = diff --shortstat
	pullmod = submodule foreach git pull
	rf = !git pull --all && git pull origin master && git push --all
	up = "![ \"$(git config \"branch.$(git rev-parse --abbrev-ref HEAD).merge\")\" = '' ] && git push -u || git push"
	hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short
	gui = !gitg -a 2>/dev/null
	bclone = clone --single-branch --branch
	cb = switch
	ch = switch
	co = checkout
	root = rev-parse --show-toplevel
	run = "!exec "
	lsmod = !git submodule status|awk '{print $2}'
	insmod = submodule add
	rbs = rebase
	mrg = merge
	rev = revert
	crbs = rebase --continue
	crev = revert --continue
	cmrg = merge --continue
	amrg = merge --abort
	arev = revert --abort
	arbs = rebase --abort
	srbs = rebase --skip
	srev = revert --skip
	log = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	br = branch
	type = cat-file -t
	dump = cat-file -p
	bro = checkout --orphan
	a = add
	cm = commit
	get = pull
	put = push -u
	cfg = config
	gcfg = config --global
	ucfg = !git config --file=$HOME/.config/git.conf
	cl = clone
	hash = rev-parse HEAD
	head = rev-parse --abbrev-ref HEAD
	dtc = dt --cached
	drop = reset --hard
	send-patch = mail-patch
	email = send-email --compose
	patch = !patch
	mail-patch = mail-patch
	patch-note = !git notes add -fF ~/.config/git/patch-note
	clean-up = "! git gc;git fsck;git fsclr;git repack -d -a"
	z--hr = "!printf '%-80s\n' ''|tr ' ' -"
	clean-up-r = "! git clean-up; echo;git submodule foreach 'git z--hr;git clean-up;echo'"
