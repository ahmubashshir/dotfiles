[alias]
	lg = log --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr %an)%Creset' --abbrev-commit --date=relative
	tree = !tig
	stat = !tig status
	fsclr = !git reflog expire --expire=now --all&&git gc --prune=now
	tlog = !tig log
	dt = diff
	mt = mergetool
	unstage = reset HEAD
	last = log -1 HEAD
	visual = !gitk
	st = status
